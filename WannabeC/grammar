
start
    : expression
    ;

expression
    : print arithmetic_expression
    | arithmetic_expression
    | boolean_expression
    ;

arithmetic_expression
    : arithmetic_expression + arithmetic_term
    | arithmetic_expression - arithmetic_term
    | arithmetic_term
    ;

arithmetic_term
    | arithmetic_term % arithmetic_factor
    : arithmetic_term / arithmetic_factor
    | arithmetic_term * arithmetic_factor
    | arithmetic_factor
    ;

arithmetic_factor
    : NUMBER
    | ( arithmetic_expression )
    ;

boolean_expression
    : arithmetic_expression boolean_operator arithmetic_expression
    ;

boolean_operator
    : '==' 
    | '&&'
    | '||' 
    | '!=' 
    | '=<' 
    | '>='
    | '<'
    | '>' 
    ;